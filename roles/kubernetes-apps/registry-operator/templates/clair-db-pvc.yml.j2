---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: clair-db-pvc
  namespace: {{ registry_operator_namespace }}
  labels:
    k8s-app: clair-db
    version: {{ registry_operator_clair_db_image_tag }}
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: {{ registry_operator_storage_class }}
  resources:
    requests:
      storage: {{ registry_operator_token_log_disk_size }}
