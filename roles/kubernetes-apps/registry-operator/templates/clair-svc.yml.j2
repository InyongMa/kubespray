---
apiVersion: v1
kind: Service
metadata:
  name: clair
  namespace: {{ registry_operator_namespace }}
  labels:
    k8s-app: clair
spec:
  selector:
    k8s-app: clair
  ports:
    - name: clair-api
      port: {{ registry_operator_clair_api_port }}
      protocol: TCP
    - name: clair-health
      protocol: TCP
      port: {{ registry_operator_clair_health_port }}
  type: ClusterIP
