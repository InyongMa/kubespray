---
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: clair
  namespace: {{ clair_namespace }}
  labels:
    k8s-app: clair
    version: {{ clair_image_tag }}
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: clair
      version: {{ clair_image_tag }}
  template:
    metadata:
      labels:
        k8s-app: clair
        version: {{ clair_image_tag }}
    spec:
      containers:
        - name: clair
          image: {{ clair_image_repo }}:{{ clair_image_tag }}
          imagePullPolicy: {{ k8s_image_pull_policy }}
          args:
          - "-config"
          - "/config/config.yaml"
          volumeMounts:
            - name: config
              mountPath: /config/config.yaml
          ports:
            - name: clair-api
              containerPort: {{ clair_api_port }}
              protocol: TCP
            - name: clair-health
              containerPort: {{ clair_health_port }}
              protocol: TCP
      volumes:
        - name: config
          configMap:
            name: clair-config
