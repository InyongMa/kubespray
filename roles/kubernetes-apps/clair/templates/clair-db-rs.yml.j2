---
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: clair-db
  namespace: {{ clair_namespace }}
  labels:
    k8s-app: clair-db
    version: {{ clair_db_image_tag }}
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: clair-db
      version: {{ clair_db_image_tag }}
  template:
    metadata:
      labels:
        k8s-app: clair-db
        version: {{ clair_db_image_tag }}
    spec:
      containers:
        - name: postgres
          image: {{ clair_db_image_repo }}:{{ clair_db_image_tag }}
          env:
          - name: POSTGRES_PASSWORD
            value: password
          ports:
            - containerPort: {{ clair_db_port }}
              name: postgres-port
              protocol: TCP
