apiVersion: monitoring.coreos.com/v1
kind: Alertmanager
metadata:
  labels:
    alertmanager: main
  name: main
  namespace: monitoring
spec:
  image: {{ alertmanager_image_repo}}:{{ alertmanager_image_tag }}
  resources:
    requests:
      memory: 200Mi
      cpu: 100m
  nodeSelector:
    kubernetes.io/os: linux
  replicas: 1
  securityContext:
    fsGroup: 2000
    runAsNonRoot: true
    runAsUser: 1000
  serviceAccountName: alertmanager-main
  version: {{ alertmanager_image_tag }}
