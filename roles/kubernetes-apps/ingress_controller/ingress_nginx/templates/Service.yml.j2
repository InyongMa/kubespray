apiVersion: v1
kind: Service
metadata:
  labels:
    app.kubernetes.io/name: {{ ingress_nginx_name }}
    app.kubernetes.io/instance: {{ ingress_nginx_name }}
    app.kubernetes.io/component: controller
  name: {{ ingress_nginx_name }}-controller-admission
  namespace: {{ ingress_nginx_name }}
spec:
  type: ClusterIP
  ports:
    - name: https-webhook
      port: 443
      targetPort: webhook
  selector:
    app.kubernetes.io/name: {{ ingress_nginx_name }}
    app.kubernetes.io/instance: {{ ingress_nginx_name }}
    app.kubernetes.io/component: controller
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app.kubernetes.io/name: {{ ingress_nginx_name }}
    app.kubernetes.io/instance: {{ ingress_nginx_name }}
    app.kubernetes.io/component: controller
  name: {{ ingress_nginx_name }}-controller
  namespace: {{ ingress_nginx_name }}
spec:
  type: LoadBalancer
  externalTrafficPolicy: Local
  ports:
    - name: http
      port: 80
      protocol: TCP
      targetPort: http
    - name: https
      port: 443
      protocol: TCP
      targetPort: https
  selector:
    app.kubernetes.io/name: {{ ingress_nginx_name }}
    app.kubernetes.io/instance: {{ ingress_nginx_name }}
    app.kubernetes.io/component: controller